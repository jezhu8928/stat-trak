<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/game_stats_back"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor">

    <ImageButton
        android:id="@+id/btn_help_game_stats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:contentDescription="@string/btn_help_desc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_menu_help" />

    <Button
        android:id="@+id/btn_view_game_stats"
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:layout_marginStart="40dp"
        android:background="@android:color/white"
        android:fontFamily="@font/raleway_light"
        android:onClick="onViewStats"
        android:text="@string/view_stats"
        android:textColor="@color/titles"
        android:textSize="18sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/summ_team_prompt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.402"
        app:layout_constraintStart_toEndOf="@+id/game_selector" />

    <Button
        android:id="@+id/btn_export_game_stats"
        android:layout_width="269dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:background="@android:color/white"
        android:fontFamily="@font/raleway_light"
        android:text="@string/btn_export_stats"
        android:textColor="@color/titles"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/game_table_scroller" />

    <Spinner
        android:id="@+id/game_selector"
        android:layout_width="284dp"
        android:layout_height="46dp"
        android:layout_marginStart="36dp"
        android:background="@android:color/white"
        android:entries="@array/team_games"
        app:layout_constraintBaseline_toBaselineOf="@+id/summ_team_selector"
        app:layout_constraintStart_toEndOf="@+id/game_prompt" />

    <TextView
        android:id="@+id/game_prompt"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginStart="100dp"
        android:fontFamily="@font/raleway_medium"
        android:text="@string/game_prompt"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/summ_team_prompt"
        app:layout_constraintStart_toEndOf="@+id/summ_team_selector" />

    <Spinner
        android:id="@+id/summ_team_selector"
        android:layout_width="284dp"
        android:layout_height="46dp"
        android:layout_marginStart="32dp"
        android:background="@android:color/white"
        android:entries="@array/team_names"
        app:layout_constraintBaseline_toBaselineOf="@+id/summ_team_prompt"
        app:layout_constraintStart_toEndOf="@+id/summ_team_prompt" />

    <TextView
        android:id="@+id/summ_team_prompt"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/raleway_medium"
        android:text="@string/team_prompt"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/game_comp_title" />

    <TextView
        android:id="@+id/game_comp_title"
        android:layout_width="1200dp"
        android:layout_height="90dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:background="@android:color/transparent"
        android:fontFamily="@font/raleway_semibold"
        android:text="@string/game_stats_title"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="60sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/game_table_scroller"
        android:layout_width="1200dp"
        android:layout_height="390dp"
        android:layout_weight="1"
        android:scrollbars="horizontal|vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/game_selector">

        <HorizontalScrollView
            android:id="@+id/horizontalView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip"
            android:nestedScrollingEnabled="true"
            android:scrollbarAlwaysDrawHorizontalTrack="true"
            android:scrollbars="horizontal"
            app:layout_constraintBottom_toTopOf="@+id/btn_export_game_stats">

            <TableLayout
                android:id="@+id/game_stats_table"
                android:layout_width="1200dp"
                android:layout_height="412dp"
                android:layout_marginTop="44dp"
                android:background="@android:color/white"
                app:layout_constraintBottom_toTopOf="@+id/btn_export_game_stats"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/summ_team_prompt"
                app:layout_constraintVertical_bias="0.0">

                <TableRow android:id="@+id/game_stat_summ_header">

                    <TextView
                        android:id="@+id/playerName"
                        android:layout_width="250dp"
                        android:layout_height="match_parent"
                        android:padding="3dip"
                        android:text="@string/table_title_name"
                        android:textAlignment="viewStart"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/jerseyNum"
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:padding="3dip"
                        android:text="@string/table_title_number"
                        android:textAlignment="viewStart"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/mins_played"
                        android:layout_width="60dp"
                        android:padding="3dip"
                        android:text="@string/table_title_mins"
                        android:textAlignment="viewStart"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/pts"
                        android:layout_width="60dp"
                        android:padding="3dip"
                        android:text="@string/table_title_pts"
                        android:textAlignment="viewStart"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/assists"
                        android:layout_width="75dp"
                        android:padding="3dip"
                        android:text="@string/table_title_asts"
                        android:textAlignment="viewStart"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/rebs"
                        android:layout_width="80dp"
                        android:padding="3dip"
                        android:text="@string/table_title_rebs"
                        android:textAlignment="viewStart"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/def_rebs"
                        android:layout_width="75dp"
                        android:padding="3dip"
                        android:text="@string/table_title_def_rebs"
                        android:textAlignment="viewStart"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/off_rebs"
                        android:layout_width="75dp"
                        android:padding="3dip"
                        android:text="@string/table_title_off_rebs"
                        android:textAlignment="viewStart"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/two_pt_makes"
                        android:layout_width="45dp"
                        android:padding="3dip"
                        android:text="@string/table_title_twos"
                        android:textAlignment="viewStart"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/two_pt_attempts"
                        android:layout_width="60dp"
                        android:padding="3dip"
                        android:text="@string/table_title_twoatts"
                        android:textAlignment="viewStart"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/fg_pct"
                        android:layout_width="75dp"
                        android:padding="3dip"
                        android:text="@string/table_title_fgpct"
                        android:textAlignment="viewStart"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/three_pt_makes"
                        android:layout_width="45dp"
                        android:padding="3dip"
                        android:text="@string/table_title_threes"
                        android:textAlignment="viewStart"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/three_pt_atts"
                        android:layout_width="60dp"
                        android:padding="3dip"
                        android:text="@string/table_title_threeatts"
                        android:textAlignment="viewStart"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/three_pt_pct"
                        android:layout_width="75dp"
                        android:padding="3dip"
                        android:text="@string/table_title_3ptpct"
                        android:textAlignment="viewStart"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/free_throws"
                        android:layout_width="45dp"
                        android:padding="3dip"
                        android:text="@string/table_title_fts"
                        android:textAlignment="viewStart"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/ft_atts"
                        android:layout_width="60dp"
                        android:padding="3dip"
                        android:text="@string/table_title_ftas"
                        android:textAlignment="viewStart"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/ft_pct"
                        android:layout_width="75dp"
                        android:padding="3dip"
                        android:text="@string/table_title_ftpct"
                        android:textAlignment="viewStart"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/turnovers"
                        android:layout_width="60dp"
                        android:padding="3dip"
                        android:text="@string/table_title_tos"
                        android:textAlignment="viewStart"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/stls"
                        android:layout_width="60dp"
                        android:padding="3dip"
                        android:text="@string/table_title_stls"
                        android:textAlignment="viewStart"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/blocks"
                        android:layout_width="60dp"
                        android:padding="3dip"
                        android:text="@string/table_title_blks"
                        android:textAlignment="viewStart"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/fouls"
                        android:layout_width="100dp"
                        android:padding="3dip"
                        android:text="@string/table_title_fouls"
                        android:textAlignment="viewStart"
                        android:textSize="18sp" />
                </TableRow>

                <TableRow android:id="@+id/stat_row">

                    <TextView
                        android:id="@+id/player_name"
                        android:layout_width="wrap_content"
                        android:padding="3dip"
                        android:text="Kyle Lowry"
                        android:textAlignment="viewStart"
                        android:textSize="22sp" />

                    <TextView
                        android:id="@+id/player_num"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:padding="3dip"
                        android:text="7"
                        android:textAlignment="viewStart"
                        android:textSize="22sp" />

                    <TextView
                        android:id="@+id/player_mins"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:padding="3dip"
                        android:text="30"
                        android:textAlignment="viewStart"
                        android:textSize="22sp" />

                    <TextView
                        android:id="@+id/player_pts"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:padding="3dip"
                        android:text="20"
                        android:textAlignment="viewStart"
                        android:textSize="22sp" />

                    <TextView
                        android:id="@+id/player_asts"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:padding="3dip"
                        android:text="6"
                        android:textAlignment="viewStart"
                        android:textSize="22sp" />

                    <TextView
                        android:id="@+id/player_tRebs"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:padding="3dip"
                        android:text="10"
                        android:textAlignment="viewStart"
                        android:textSize="22sp" />

                    <TextView
                        android:id="@+id/player_dRebs"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:padding="3dip"
                        android:text="7"
                        android:textAlignment="viewStart"
                        android:textSize="22sp" />

                    <TextView
                        android:id="@+id/player_oRebs"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:padding="3dip"
                        android:text="3"
                        android:textAlignment="viewStart"
                        android:textSize="22sp" />

                    <TextView
                        android:id="@+id/player_twoPts"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:padding="3dip"
                        android:text="10"
                        android:textAlignment="viewStart"
                        android:textSize="22sp" />

                    <TextView
                        android:id="@+id/player_twoPtAtts"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:padding="3dip"
                        android:text="15"
                        android:textAlignment="viewStart"
                        android:textSize="22sp" />

                    <TextView
                        android:id="@+id/player_fgPct"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:padding="3dip"
                        android:text="67%"
                        android:textAlignment="viewStart"
                        android:textSize="22sp" />

                    <TextView
                        android:id="@+id/player_threePts"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:padding="3dip"
                        android:text="0"
                        android:textAlignment="viewStart"
                        android:textSize="22sp" />

                    <TextView
                        android:id="@+id/player_threePtAtts"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:padding="3dip"
                        android:text="4"
                        android:textAlignment="viewStart"
                        android:textSize="22sp" />

                    <TextView
                        android:id="@+id/player_threePtPct"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:padding="3dip"
                        android:text="0%"
                        android:textAlignment="viewStart"
                        android:textSize="22sp" />

                    <TextView
                        android:id="@+id/player_freeThrows"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:padding="3dip"
                        android:text="3"
                        android:textAlignment="viewStart"
                        android:textSize="22sp" />

                    <TextView
                        android:id="@+id/player_ftAtts"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:padding="3dip"
                        android:text="3"
                        android:textAlignment="viewStart"
                        android:textSize="22sp" />

                    <TextView
                        android:id="@+id/player_ftPct"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:padding="3dip"
                        android:text="100%"
                        android:textAlignment="viewStart"
                        android:textSize="22sp" />

                    <TextView
                        android:id="@+id/player_turnovers"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:padding="3dip"
                        android:text="3"
                        android:textAlignment="viewStart"
                        android:textSize="22sp" />

                    <TextView
                        android:id="@+id/player_steals"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:padding="3dip"
                        android:text="3"
                        android:textAlignment="viewStart"
                        android:textSize="22sp" />

                    <TextView
                        android:id="@+id/player_blocks"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:padding="3dip"
                        android:text="2"
                        android:textAlignment="viewStart"
                        android:textSize="22sp" />

                    <TextView
                        android:id="@+id/player_fouls"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:padding="3dip"
                        android:text="4"
                        android:textAlignment="viewStart"
                        android:textSize="22sp" />
                </TableRow>

            </TableLayout>
        </HorizontalScrollView>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
