<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/instructions_back"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <TextView
        android:id="@+id/instruct_title"
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:background="@android:color/transparent"
        android:fontFamily="@font/raleway_semibold"
        android:text="@string/instructions_title"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="60sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/instruct_text"
        android:layout_width="1200dp"
        android:layout_height="86dp"
        android:layout_marginTop="10dp"
        android:background="@android:color/white"
        android:fontFamily="@font/raleway_light"
        android:text="@string/menu_instructions"
        android:textColor="@color/titles"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/instruct_title" />

    <ImageView
        android:id="@+id/instruct_img"
        android:layout_width="800dp"
        android:layout_height="500dp"
        android:layout_marginBottom="32dp"
        android:contentDescription="@string/ss_desc"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/instruct_text"
        app:layout_constraintVertical_bias="0.82"
        tools:srcCompat="@tools:sample/backgrounds/scenic" />

    <Button
        android:id="@+id/btn_left"
        android:layout_width="88dp"
        android:layout_height="70dp"
        android:layout_marginTop="256dp"
        android:fontFamily="@font/raleway_semibold"
        android:textSize="24sp"
        app:layout_constraintEnd_toStartOf="@+id/instruct_img"
        app:layout_constraintHorizontal_bias="0.513"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/instruct_text" />

    <Button
        android:id="@+id/button2"
        android:layout_width="88dp"
        android:layout_height="70dp"
        android:fontFamily="@font/raleway_semibold"
        android:textSize="24sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/btn_left"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/instruct_img" />

</androidx.constraintlayout.widget.ConstraintLayout>
